<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/list_users_fragment">

    <fragment
        android:id="@+id/list_users_fragment"
        android:name="com.example.examapp.users.combinedlist.UserListFragment"
        android:label="fragment_user_list"
        tools:layout="@layout/fragment_user_list">

        <action
            android:id="@+id/to_user_details"
            app:destination="@+id/user_details"
            app:enterAnim="@anim/to_left"
            app:exitAnim="@anim/from_right"
            app:popEnterAnim="@anim/to_right"
            app:popExitAnim="@anim/from_left" />
    </fragment>

    <fragment
        android:id="@+id/user_details"
        android:name="com.example.examapp.users.details.UserDetailsFragment"
        android:label="fragment_user_details"
        tools:layout="@layout/fragment_user_details" />

</navigation>